    <form id="loginForm" novalidate>
      <label for="username">User ID</label>
      <input
        type="text"
        id="username"
        name="username"
        placeholder="Enter your user ID"
        required
      />
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Enter your password"
        required
      />
      <button type="submit">Sign In</button>
    </form>
    <div class="note"></div>
